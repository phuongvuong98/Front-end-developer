        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0 ) {%>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul>
                    <% orders.forEach(order => {%>
                        <li>Order <%= order.id %> gom:
                            <ul>
                                    <% order.Products.forEach(p => {%>  
                                            <li>Ten: <%= p.title %></li>
                                            <li>So luong: <%= p.OrderItem.quantity %></li>
                                    <%})%>
                            </ul>
                        </li>
                    <%})%>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>